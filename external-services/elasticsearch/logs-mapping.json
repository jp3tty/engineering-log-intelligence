      },
      "raw_log": {
        "type": "text",
        "analyzer": "standard"
      },
      "parsed_fields": {
        "type": "object",
        "dynamic": true
      },
      "anomaly_score": {
        "type": "float"
      },
      "correlation_id": {
        "type": "keyword"
      },
      "severity": {
        "type": "keyword"
      },
      "host": {
        "type": "keyword"
      },
      "service": {
        "type": "keyword"
      },
      "environment": {
        "type": "keyword"
      },
      "created_at": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      }
    }
